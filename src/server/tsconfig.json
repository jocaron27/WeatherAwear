{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "./",
    "target": "es6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": false,
    "types": [
      "node",
      "express",
      "googlemaps",
      "jasmine"
    ],
    "typeRoots": ["../node_modules/@types"],
    "lib": [
      "es2015",
      "es2018"
    ]
  },
  "include": [
    "**/*.ts",
    "*.ts",
    "node_modules/@types"
  ],
  "exclude": [
    "**/*.spec.ts",
    "node_modules"
  ]
}
