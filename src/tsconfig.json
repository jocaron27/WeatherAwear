{
  "extends": "../tsconfig.json",
  "include": [
    "server/**/*.ts",
    "server/*.ts",
    "**/*.ts",
    "node_modules/@types"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": true,
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "./",
    "target": "es6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": false,
    "types": [
      "node",
      "express",
      "googlemaps",
      "jasmine"
    ],
    "typeRoots": ["../node_modules/@types"],
    "lib": [
      "es2015",
      "es2018"
    ]
  }
}
